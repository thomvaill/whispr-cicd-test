{
  "name": "whispr-cicd-test",
  "version": "1.3.3",
  "description": "Whispr CICD test",
  "main": "dist/src/boot.js",
  "scripts": {
    "lint": "eslint {src,tests}/**/*.ts",
    "format": "prettier-eslint --write $PWD/{src,tests}/**/*.ts",
    "format:check": "prettier-eslint --list-different $PWD/{src,tests}/**/*.ts",
    "test:unit": "jest --forceExit --detectOpenHandles",
    "test": "npm run test:unit",
    "start": "node .",
    "start:dev": "nodemon",
    "build": "tsc --project ./tsconfig.build.json"
  },
  "private": true,
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@types/express": "^4.17.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "jest": "^29.6.1",
    "nodemon": "^2.0.2",
    "prettier": "2.0.2",
    "prettier-eslint-cli": "^5.0.0",
    "semantic-release": "^17.0.7",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format:check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
